<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="RisohEditorWinUI3Blank.UIExtend.EditorTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RisohEditorWinUI3Blank.UIExtend"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border CornerRadius="5" Name="MainBorder" Background="#272727" Width="300" PointerEntered="Border_PointerEntered" PointerExited="Border_PointerExited" PointerPressed="Border_PointerPressed">
        <Grid Margin="10 0 10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Ellipse Grid.Column="0" Height="20" Width="20" StrokeThickness="1.5" Fill="#272727" Stroke="White">
            </Ellipse>
            <TextBlock Grid.Column="1" Foreground="White" FontSize="15" VerticalAlignment="Center" x:Name="LFileName">
          File1
            </TextBlock>
            <FontIcon Glyph="&#xE8BB;" Grid.Column="2" Width="20" Height="20" FontSize="12" PointerPressed="FontIcon_PointerPressed"/>
        </Grid>
    </Border>
</UserControl>
