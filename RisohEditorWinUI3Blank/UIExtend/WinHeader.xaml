<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="RisohEditorWinUI3Blank.UIExtend.WinHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RisohEditorWinUI3Blank.UIExtend"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Root" CornerRadius="9 9 0 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
                <Image Height="30" Width="30" VerticalAlignment="Center">
                </Image>
                <TextBlock Text="XXX" VerticalAlignment="Center" />
            </StackPanel>

            <Grid Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource NavBlock}" Grid.Column="0" >
                    File
                </Button>
                <Button Style="{StaticResource NavBlock}" Grid.Column="1" >
                    Edit
                </Button>
                <Button Style="{StaticResource NavBlock}" Grid.Column="2" >
                    Format
                </Button>
                <Button Style="{StaticResource NavBlock}" Grid.Column="3" >
                    View
                </Button>
                <Button Style="{StaticResource NavBlock}" Grid.Column="4" >
                    Help
                </Button>

            </Grid>
        </Grid>

    </Grid>
</UserControl>
