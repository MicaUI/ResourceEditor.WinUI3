<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RisohEditorWinUI3Blank.Themes"
    xmlns:Controls="using:RisohEditorWinUI3Blank.UIExtend">

    <Style x:Key="NavBlock" TargetType="Button">
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="GridColor" TargetType="Grid">
        <Setter Property="Background" Value="#272727"/>
    </Style>

    <DataTemplate x:Key="EditorTabHeaderTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Ellipse Height="20" Width="20" StrokeThickness="1.5" Fill="#272727" Stroke="White"/>
            <TextBlock Margin="5,0,0,0" Text="{Binding}" />
        </StackPanel>
    </DataTemplate>

    <Style x:Key="EditorTabStyle" TargetType="Controls:EditorTab">
        <Setter Property="HeaderTemplate" Value="{StaticResource EditorTabHeaderTemplate}" />
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>